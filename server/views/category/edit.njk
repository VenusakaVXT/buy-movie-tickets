{% extends "index.njk" %}

{% block content %}
    <div class="p-4">
        <h3 class="title">Cập nhật thể loại</h3>

        <form id="frm-update-category" method="POST" action="/category-film/{{category._id}}?_method=PUT">
            <div class="form-group">
                <label for="category">Thể loại:</label>
                <input type="text" class="form-control" value="{{ category.category }}" id="category" name="category" required>
            </div>

            <button type="submit" class="btn btn-control mt-2" style="width: 100">Lưu</button>
        </form>
    </div>
{% endblock %}