{% extends "index.njk" %}

{% block content %}
    <form class="p-4 movies__table-lists">
        <h3 class="title">Category List</h3>

        <table class="table table-movies mt-4" border="1">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category title</th>
                    <th scope="col">Customs</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ category.category }}</td>
                    <td>
                        <button type="button" class="btn btn-outline-warning">
                            <a href="/category-film/{{ category._id }}/edit">Edit</a>
                        </button>
                        <button type="button" class="btn btn-outline-danger">
                            <a href="" data-toggle="modal" data-id="{{ category._id }}" data-target="#deleteCategoryModal">
                                Delete
                            </a>
                        </button>
                    </td>
                </tr>
                {% else %}
                <tr style="text-align: center">
                    <td colspan="6">You have not registered for any category yet.
                        <a href="/category/create">Post a category</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </form>

    {% include "category/delete.njk" %}
{% endblock %}