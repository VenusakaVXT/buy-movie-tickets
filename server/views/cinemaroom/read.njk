{% extends "index.njk" %}

{% block content %}
    <form class="p-4 movies__table-lists">
        <h3 class="title">Cinema Room List</h3>

        <table class="table table-movies mt-4" border="1">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Room number</th>
                    <th scope="col">Total seats</th>
                    <th scope="col">Cinema</th>
                    <th scope="col">Customs</th>
                </tr>
            </thead>
            <tbody>
                {% for cinemaroom in cinemaRooms %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ cinemaroom.roomNumber }}</td>
                    <td>{{ cinemaroom.totalNumSeat }}</td>
                    <td>{{ cinemaroom.cinemaName }}</td>
                    <td>
                        <button type="button" class="btn btn-outline-warning">
                            <a href="/cinemaroom/{{ cinemaroom._id }}/edit">Edit</a>
                        </button>
                        <button type="button" class="btn btn-outline-danger">
                            <a href="" data-toggle="modal" data-id="{{ cinemaroom._id }}" data-target="#deleteCinemaRoomModal">
                                Delete
                            </a>
                        </button>
                    </td>
                </tr>
                {% else %}
                <tr style="text-align: center">
                    <td colspan="6">You have not registered for any cinemaroom yet.
                        <a href="/cinemaroom/create">Post a cinemaroom</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </form>

    {% include "cinemaroom/delete.njk" %}
{% endblock %}