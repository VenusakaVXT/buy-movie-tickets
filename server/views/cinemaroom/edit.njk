{% extends "index.njk" %}

{% block content %}
    <div class="p-4">
        <h3 class="title">Update cinema room</h3>

        <form id="frm-update-cinemaroom" method="POST" action="/cinemaroom/{{cinemaroom._id}}?_method=PUT">
            <div class="form-group">
                <label for="roomNumber">Room number:</label>
                <input type="text" class="form-control" value="{{ cinemaroom.roomNumber }}" id="roomNumber" name="roomNumber">
            </div>

            <div class="form-group">
                <label for="totalNumSeat">Total number seats (max: 110):</label>
                <input type="number" class="form-control" value="{{ cinemaroom.totalNumSeat }}" id="totalNumSeat" name="totalNumSeat" max="110">
            </div>

            <div class="form-group">
                <label for="cinema">Cinema:</label>
                <select name="cinema" id="cinema" class="form-control">
                    {% for cinema in cinemas %}
                        <option value="{{ cinema._id }}"
                            {% if (cinemaroom.cinema) and (cinemaroom.cinema.toString() === cinema._id.toString()) %}selected{% endif %}
                        >
                            {{ cinema.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-control mt-2" style="width: 100">Save</button>
        </form>
    </div>
{% endblock %}