{% extends "index.njk" %}

{% block content %}
    <div class="p-4">
        <h3 class="title">Thêm Chương trình ưu đãi</h3>

        <form id="frm-add-promotion-program" method="POST" action="/promotion-program/store" enctype="multipart/form-data">
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="discountCode">Mã giảm giá:</label>
                <input type="text" class="form-control" id="discountCode" name="discountCode" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="programName">Tên chương trình:</label>
                <input type="text" class="form-control" id="programName" name="programName" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="content">Nội dung:</label>
                <textarea class="form-control" id="content" name="content" required placeholder="Please enter a content of program..."></textarea>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="startDate">Ngày bắt đầu:</label>
                <input type="date" class="form-control" id="startDate" name="startDate" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="endDate">Ngày kết thúc:</label>
                <input type="date" class="form-control" id="endDate" name="endDate" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="percentReduction">Phần trăm giảm:</label>
                <input type="number" class="form-control" id="percentReduction" name="percentReduction" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="maxMoneyAmount">Số tiền tối đa:</label>
                <input type="number" class="form-control" id="maxMoneyAmount" name="maxMoneyAmount" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="image">Hình ảnh:</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
            </div>

            <div class="form-group">
                <label for="condition">Điều kiện:</label>
                <input type="text" class="form-control" id="condition" name="condition" required>
            </div>

            <div>
                <input type="checkbox" id="isActive" name="isActive">
                <label for="isActive">Đang hoạt động</label>
            </div>

            <div class="form-group">
                <label for="cinema">Rạp chiếu phim:</label>
                <select name="cinema" id="cinema" class="form-control">
                    <option value="">----- Chọn rạp chiếu phim -----</option>
                    {% for cinema in cinemas %}
                        <option value="{{ cinema._id }}">{{ cinema.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-control mt-2" style="width: 160">
                Thêm chương trình
            </button>
        </form>
    </div>
{% endblock %}