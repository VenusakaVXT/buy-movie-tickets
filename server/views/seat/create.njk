{% extends "index.njk" %}

{% block content %}
    <div class="p-4">
        <h3 class="title">Post a seat</h3>

        <form id="frm-add-seat" method="POST" action="/seat/store">
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="rowSeat">Row seat:</label>
                <select name="rowSeat" id="rowSeat" class="form-control">
                    <option value="">Select row seat</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                    <option value="G">G</option>
                    <option value="H">H</option>
                    <option value="I">I</option>
                </select>
            </div>
            
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="seatNumber">Seat number (1-12):</label>
                <input type="number" class="form-control" id="seatNumber" name="seatNumber" min="1" max="12">
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="seatType">Seat type:</label>
                <select name="seatType" id="seatType" class="form-control">
                    <option value="Single">Single</option>
                    <option value="Double">Double</option>
                </select>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="cinemaRoom">Cinema room:</label>
                <select name="cinemaRoom" id="cinemaRoom" class="form-control">
                    <option value="">Select cinema room</option>
                    {% for cinemaRoom in cinemaRooms %}
                        <option value="{{ cinemaRoom._id }}">{{ cinemaRoom.roomNumber }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-control mt-2" style="width: 120">
                Add seat
            </button>
        </form>
    </div>
{% endblock %}