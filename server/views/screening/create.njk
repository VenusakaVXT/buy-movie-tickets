{% extends "index.njk" %}

{% block content %}
    <div class="p-4">
        <h3 class="title">Thêm suất chiếu</h3>

        <form id="frm-add-screening" method="POST" action="/screening/store">
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="movie">Phim (ĐC: Đang Chiếu, SC: Sắp Chiếu):</label>
                <select name="movie" id="movie" class="form-control" required>
                    <option value="">----- Chọn phim -----</option>
                    {% for movie in movies %}
                        <option value="{{ movie._id }}">
                            {{ movie.title }} {% if movie.wasReleased %}(ĐC){% else %}(SC){% endif %}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="movieDate">Ngày chiếu phim:</label>
                <input type="date" class="form-control" id="movieDate" name="movieDate" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="timeSlot">Khung giờ:</label>
                <input type="time" class="form-control" id="timeSlot" name="timeSlot" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="price">Giá (<span class="text-italic">xx000 = xx.000VNĐ</span>):</label>
                <input type="number" class="form-control" id="price" name="price" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="cinemaRoom">Phòng chiếu phim:</label>
                <select name="cinemaRoom" id="cinemaRoom" class="form-control" required>
                    <option value="">----- Chọn phòng chiếu -----</option>
                    {% for cinemaRoom in cinemaRooms %}
                        <option value="{{ cinemaRoom._id }}">
                            {{ cinemaRoom.roomNumber }}-{{ cinemaRoom.cinemaName }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-control mt-2" style="width: 145">
                Thêm suất chiếu
            </button>
        </form>
    </div>
{% endblock %}