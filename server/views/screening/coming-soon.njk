{% extends "index.njk" %}

{% block content %}
    <form class="p-4 movies__table-lists">
        <div class="list-movies__header mt-4">
            <h3 class="title">Suất Chiếu Sắp Chiếu</h3>
            <a class="list-movies__header-trash" href="/screening/now-showing">
                Đang chiếu
            </a>
        </div>

        <table class="table table-movies mt-4" border="1">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên phim</th>
                    <th scope="col">Ngày chiếu</th>
                    <th scope="col">Khung giờ</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Chiếu tại</th>
                    <th scope="col">Tùy chỉnh</th>
                </tr>
            </thead>
            <tbody>
                {% for screening in screenings %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ screening.movieName }}</td>
                    <td>{{ screening.movieDate }}</td>
                    <td>{{ screening.timeSlot }}</td>
                    <td>{{ screening.price }}</td>
                    <td>{{ screening.screeningAt }}</td>
                    <td>
                        <button type="button" class="btn btn-outline-warning">
                            <a href="/screening/{{ screening._id }}/edit">Sửa</a>
                        </button>
                        <button type="button" class="btn btn-outline-danger">
                            <a href="" data-toggle="modal" data-id="{{ screening._id }}" data-target="#deleteScreeningModal">
                                Xóa
                            </a>
                        </button>
                    </td>
                </tr>
                {% else %}
                <tr style="text-align: center">
                    <td colspan="6">No movie screenings have been discontinued yet.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </form>

    {% include "screening/delete.njk" %}
{% endblock %}