{% extends "index.njk" %}

{% block content %}
    <div class="p-4">
        <h3 class="title">Thêm rạp chiếu phim</h3>

        <form id="frm-add-cinema" method="POST" action="/cinema/store">
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="name">Tên rạp chiếu phim:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="logo">Logo rạp chiếu phim:</label>
                <input type="text" class="form-control" id="logo" name="logo" required>
            </div>

            <div class="form-group">
                <span style="color: #ff0000">*</span>
                <label for="address">Địa chỉ:</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>

            <div class="form-group">
                <label for="img">Hình ảnh rạp chiếu:</label>
                <input type="text" class="form-control" id="img" name="img">
            </div>
            
            <div class="form-group">
                <label for="description">Mô tả rạp chiếu phim:</label>
                <input type="text" class="form-control" id="description" name="description">
            </div>

            <button type="submit" class="btn btn-control mt-2" style="width: 150px">
                Thêm rạp chiếu
            </button>
        </form>
    </div>
{% endblock %}