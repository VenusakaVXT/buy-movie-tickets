{% extends "index.njk" %}

{% block content %}
    <div class="movie-detail__wrapper" style="margin: 20px">
        <h2 class="title" style="margin-bottom: 16px">{{ movie.title }}</h2>

        <div class="d-flex">
            <img 
                width="460" 
                height="280" 
                src="https://img.youtube.com/vi/{{movie.trailerId}}/maxresdefault.jpg"
                style="margin-right: 20px" 
            />

            <div>
                <p style="text-align: justify">Description: {{ movie.description }}</p>
                <p>Director: {{ movie.director }}</p>
                <p>Content writter: {{ movie.contentWritter }}</p>
                <p>Actors: {{ movie.actors }}</p>
                <p>Category: {{ categoryName }}</p>
                <p>Release date: {{ movie.releaseDate }}</p>
                <p>Time: {{ movie.time }} minute</p>
                <p>Producer: {{ producerName }}</p>
                <p>
                    Was released: 
                    {% if movie.wasReleased %}
                        Already
                    {% else %}
                        Not yet
                    {% endif %}
                </p>
            </div>
        </div>

        <div class="d-flex">
            <div class="d-flex mt-5" style="margin-left: 379px">
                <button class="btn mx-2 btn-control">
                    <a href="/movie-screening/{{ movie._id }}/edit">Edit</a>
                </button>
                <button class="btn mx-2 btn-control" {% if movie.wasReleased === true %}disabled{% endif %}>
                    <a href="" data-toggle="modal" data-id="{{ movie._id }}" data-target="#deleteMovieModal">
                        Delete
                    </a>
                </button>
            </div>
        </div>
    </div>

    {% include "movies/delete.njk" %}
{% endblock %}